<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/css/style.css">

    <title>Espaço Lisa Ribeiro</title>
</head>
<body>
    <header> 
        <section id="logo">
            <a href="/cliente">
            <img id="logoImg" src="../../public/images/Lisa.png" class="img">
            </a>
        </section>
        <section id="divBusca">
            <form action="/cliente/search" method="POST">
                <input type="date" id="txtBusca" name="search" placeholder="Buscar..."/>
                <button type="submit" id="search"><img src="../../public/images/icons8-pesquisar-sf-black-16.png" id="btnBusca" alt="Buscar"/></button>
            </form> 
        </section>
        <nav>
            
            <a href="/cliente/agenda/add"><button class="agendamento"><span class="btn">Novo Agendamento</span></button></a>
            <a href="/cliente"><button class="agendamento"><span class="btn">Sobre nós</span></button></a>
            <a href="/cliente/agenda"><button class="agendamento"><span class="btn">Agenda</span></button></a>

            
        </nav>
    </header>
    <h1>Agendamentos</h1>

    <main class="agenda">

        <section id="dadosAgenda">
            <% agenda.forEach(item => { %> 
                <ul id="detalhesAgenda">
                    <section id="dadosAgenda">
                        NOME:<%= item.nome %>
                        DATA:<%= item.data %>
                        HORA:<%= item.hora %>
                    </section>
                    
                </ul>
                
                <% }); %> 
        </section>     
    </main>
    <footer>
        <section id="footerImg">
        <img id="footer" src="../../public/images/Lisa.png" class="img">
        </section>
        <section id="footerNav">
            <a href="/admin">Login</a>
            <a href="/cliente">Sobre nós</a>
            <a href="/cliente/agenda">Agenda</a>
            <a href="/cliente/agenda/add">Agendamento</a>
            <a href="/cliente/infos">Serviços</a>    

        </section>
        <section id="end">
            <h4>Endereço</h4>
            <p>Rua Umbuzeiro, 54</p>
            <p>Alto Floresta</p>
            <p>Montes Claros - MG</p>
        </section>
        <section id="contato">
            <h4>Contato</h4>
            <p><img src="../../public/images/chamada-telefonica.png" id="contatoImg">(38) 98411-3383</p>
            <p><img src="../../public/images/whatsapp.png" id="contatoImg">(38) 98411-3383</p>
            <p><img src="../../public/images/telefone-tipico-antigo.png" id="contatoImg">(38) 3213-2469</p>
            <p><img src="../../public/images/marketing-de-email.png" id="contatoImg">hudson.o.pereira@gmail.com</p>
            <p><img src="../../public/images/instagram.png" id="contatoImg">/lisaribeiro44/</p>
        </section>
    </footer>
</body>
</html>