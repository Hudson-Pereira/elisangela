    <main id="inicioMain">

        <section id="msgs">
            <section id="msgp">
            <h3>Produtos perto do vencimento</h3>
        <% produtos.forEach(item => { %> 
            <ul id="detalhes">
                <section id="dadosAdmin">
                    Nome:<span><%= item.nome %></span> 
