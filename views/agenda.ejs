<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/css/style.css">

    <title>Espa√ßo Lisa Ribeiro</title>
</head>
<body>
    <%- include('./includes/adminHeader'); %>
    <section id="divBusca">
        <form action="/cliente/search" method="POST">
            <input type="date" id="txtBusca" name="search" placeholder="Buscar..." />
            <button type="submit" id="search"><img src="../../public/images/icons8-pesquisar-sf-black-16.png" id="btnBusca"
                    alt="Buscar" /></button>
        </form>
    </section>
    
    <h1>Agendamentos</h1>

    <main class="agendaAdmin">

            <% agenda.forEach(item => { %> 
                <ul id="detalhes">
                    <section id="dados">
                        
                        NOME:<span><%= item.nome %></span>
                        DATA:<span><%= item.data %></span>
                        HORA:<span><%= item.hora %></span>
                        VALOR:<span><%= item.preco %></span>
                        Procedimento:<span><%= item.procedimento %></span>
                    </section>
                    <section id="manipulacao">
                        <a href="agenda/alterar/<%= item.id%>"><button class="manipular">Alterar</button></a>
                        <a href="agenda/deletar/<%= item.id%>"><button class="manipular">Deletar</button></a>
                    </section>
                </ul>
                
                <% }); %> 
                
    </main>
    <%- include('./includes/adminFooter'); %>

</body>
</html>