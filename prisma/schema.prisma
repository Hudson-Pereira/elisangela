generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Produtos {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  nome      String     @unique
  valor     Float
  descricao String
  data      String
  estoque   Float
  vendedor  String
  servicos  Servicos[]
  createdAt DateTime   @default(now())
}

model Servicos {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nome      String   @unique
  valor     Float
  produtos  Produtos @relation(fields: [produto], references: [nome])
  produto   String[]
  descricao String
}

model Agenda {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  data  String
  hora  String
  preco Float
}
