generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Produtos {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  nome      String     @unique
  valor     Float
  descricao String
  dia       Int
  mes       Int
  ano       Int
  estoque   Int
  vendedor  String
  servicos  Servicos[]
}

model Servicos {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nome      String   @unique
  valor     Float
  produtos  Produtos @relation(fields: [produto], references: [nome])
  produto   String[]
  descricao String
}
